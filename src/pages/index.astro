---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { HeroSection } from '@/components/HeroSection';
---

<Layout title="Zup Protocol">
	<main class="flex min-h-screen flex-col items-center justify-center p-4 relative overflow-hidden">
		<!-- Background Gradient Effect -->
		<div class="absolute inset-0 -z-10 h-full w-full bg-background [background:radial-gradient(125%_125%_at_50%_10%,hsl(var(--background))_40%,hsl(var(--primary)/_0.1)_100%)]"></div>
		
		<div class="z-10 text-center space-y-6 max-w-2xl px-4">
			<h1 class="text-4xl md:text-6xl font-bold tracking-tighter bg-clip-text text-transparent bg-gradient-to-b from-foreground to-foreground/70 animate-fade-in-up">
				Zup Protocol
			</h1>
			<p class="text-xl text-muted-foreground animate-fade-in-up delay-100">
				The Future of Web3 Interaction. Web Native. Premium.
			</p>
			
			<HeroSection client:load />
		</div>
	</main>
</Layout>

<style>
	/* Simple fade in animation for initial load */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-in-up {
		animation: fadeInUp 0.8s ease-out forwards;
	}
	.delay-100 {
		animation-delay: 0.1s;
	}
</style>
