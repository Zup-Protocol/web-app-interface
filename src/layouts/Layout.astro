---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

import { ThemeMode } from "@/lib/theme-mode";
import { LocalStorageKey } from "@/lib/local-storage-key";
import { AppLanguages, AppLanguagesUtils } from "@/lib/app-languages";
import { Header } from "@/components/header";
import { LocaleInitializer } from "@/components/common/locale-initializer";

interface Props {
  title: string;
}

const { title } = Astro.props;

const supportedLanguages = AppLanguagesUtils.values.filter(
  (v) => v !== AppLanguages.SYSTEM,
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Zup Protocol - The best dApp in Web3" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="" id="theme-color-meta" />
    <title>{title} | Zup Protocol</title>
    <ClientRouter />
    <script
      is:inline
      define:vars={{
        ThemeMode,
        LocalStorageKey,
        AppLanguages,
        supportedLanguages,
      }}
    >
      (function () {
        function getTheme() {
          if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem(LocalStorageKey.THEME)
          ) {
            return localStorage.getItem(LocalStorageKey.THEME);
          }
          return ThemeMode.SYSTEM;
        }

        function setClass(theme) {
          const isDark =
            theme === ThemeMode.DARK ||
            (theme === ThemeMode.SYSTEM &&
              window.matchMedia("(prefers-color-scheme: dark)").matches);

          if (isDark) {
            document.documentElement.classList.add(ThemeMode.DARK);
          } else {
            document.documentElement.classList.remove(ThemeMode.DARK);
          }

          updateMeta();
        }

        function updateMeta() {
          const meta = document.getElementById("theme-color-meta");

          if (meta) {
            const background = getComputedStyle(document.documentElement)
              .getPropertyValue("--background")
              .trim();
            if (background) {
              meta.setAttribute("content", background);
            }
          }
        }

        const theme = getTheme();
        setClass(theme);

        const observer = new MutationObserver(() => {
          updateMeta();
        });

        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });

        document.addEventListener("astro:after-swap", () => {
          const theme = getTheme();
          setClass(theme);
        });

        window
          .matchMedia("(prefers-color-scheme: dark)")
          .addEventListener("change", () => {
            if (getTheme() === ThemeMode.SYSTEM) setClass(ThemeMode.SYSTEM);
          });
      })();

      (function () {
        function getInitialLocale() {
          const stored =
            typeof localStorage !== "undefined"
              ? localStorage.getItem(LocalStorageKey.LOCALE)
              : null;
          if (stored) return stored;

          if (typeof navigator !== "undefined") {
            const sys = navigator.language.split("-")[0];

            if (supportedLanguages.includes(sys)) return sys;
          }
          return AppLanguages.ENGLISH;
        }

        const locale = getInitialLocale();
        document.documentElement.lang = locale;
      })();
    </script>
  </head>
  <body
    class="bg-background text-foreground antialiased selection:bg-primary selection:text-primary-foreground"
  >
    <LocaleInitializer client:only="react" />
    <Header client:only="react" />
    <slot />
  </body>
</html>
